{
  "name": "profile",
  "version": "1.0.0",
  "description": "This repository contains the source for a personal profile site built as a small Single Page Application (SPA). The site presents information about Mihai-Cristian Condrea and includes additional pages such as a privacy policy and code of conduct. It is designed as a Progressive Web App using Material Web Components and vanilla JavaScript.",
  "scripts": {
    "dev": "vite",
    "build": "npm run verify:runtime-dependencies && vite build",
    "preview": "vite preview",
    "test": "node scripts/check-structure.js && npm run verify:architecture && npm run verify:runtime-dependencies && jest",
    "verify:seo": "node -e \"['public/sitemap.xml','public/robots.txt'].forEach((file)=>require('fs').accessSync(file));\"",
    "deploy": "npm run build && npm run verify:seo",
    "verify:architecture": "node scripts/verify-architecture-docs.js",
    "verify:runtime-dependencies": "node scripts/verify-runtime-dependencies.js"
  },
  "keywords": [],
  "author": "",
  "license": "GPL-3.0-or-later",
  "type": "commonjs",
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@tailwindcss/cli": "^4.1.13",
    "@tailwindcss/postcss": "^4.1.13",
    "@tailwindcss/vite": "^4.1.17",
    "babel-jest": "^30.1.3",
    "baseline-browser-mapping": "^2.9.19",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "30.1.2",
    "tailwindcss": "^4.1.13",
    "vite": "^7.2.2"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "moduleNameMapper": {
      "^@/(.*BuilderRemoteView\\.html\\?raw)$": "<rootDir>/tests/fixtures/builderRemoteRaw.js",
      "^@/(.*FaqScreen\\.html\\?raw)$": "<rootDir>/tests/fixtures/faqScreenRaw.js",
      "^@/(.*WorkspaceInsightCardView\\.html\\?raw)$": "<rootDir>/tests/fixtures/workspaceInsightCardRaw.js",
      "^@/(.*\\.html\\?raw)$": "<rootDir>/tests/fixtures/rawHtmlStub.js",
      "^@/(.*)$": "<rootDir>/app/src/main/js/$1",
      "^.+\\.html\\?raw$": "<rootDir>/tests/fixtures/rawHtmlStub.js"
    },
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ]
  },
  "dependencies": {
    "@fontsource/google-sans": "^5.2.1",
    "@fontsource/google-sans-code": "^5.2.3",
    "@fortawesome/fontawesome-free": "^7.1.0",
    "@lottiefiles/dotlottie-wc": "^0.8.15",
    "beercss": "^3.13.1",
    "firebase": "^12.7.0",
    "jsondiffpatch": "^0.7.3",
    "material-dynamic-colors": "^1.1.2",
    "material-symbols": "^0.40.2"
  }
}
